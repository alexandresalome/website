{% extends "AlomWebsiteBundle::layout.html.twig" %}

{% block title            'Blog | Alexandre Salomé' %}
{% block meta_description 'Articles written by Alexandre Salomé, about Symfony2, security, development and more general technical discussions.' %}

{% set active = "blog" %}

{% block content %}
    <div id="block-post-list" class="page-content">

        <h1>Blog posts</h1>

        {% if is_granted('ROLE_ADMIN') %}
            <div style="text-align: right">
                <a href="{{ path('blog_post_create') }}" class="button button-add"><span>New post</span></a>
            </div>
        {% endif %}
        {% set curDate = '' %}
        {% for post in posts %}
            {% set date = post.getPublishedAt().format('F Y') %}
            {% if date != curDate %}
                {% if curDate != '' %}
                    </div>
                {% endif %}
                {% set curDate = date %}
                <h2>{{ date }}</h2>
                <div class="button-set">
            {% endif %}
            <a class="button {% if not post.isActive() %}button-hidden{% endif %}" href="{{ path("blog_post_view", { "slug": post.getSlug() }) }}">{{ post.getTitle() }}</a>
        {% endfor %}
        </div> {# End of in-for tag #}
    </div>
{% endblock %}
